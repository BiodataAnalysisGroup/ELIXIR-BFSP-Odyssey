Package: Odyssey
Title: Interactive Data Discovery Tool for Exploring Biodiversity Data
Version: 0.0.0.9000
Authors@R: c(
    person(given = "Nikos", family = "Pechlivanis", email = "npechlv@gmail.com", role = c("aut"), comment = c(ORCID = "0000-0003-2502-612X")),
